<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="section-title text-center mb-4 pb-2">
                <h4 class="title mb-4 mt-3"
                    style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">
                    Bed Category</h4>
                <p class="text-muted para-desc mx-auto mb-0">There is now an abundance of readable dummy texts. These
                    are usually used when a text is required purely to fill a space.</p>
            </div>
            <div class="input-group">
                <div class="form-outline" data-mdb-input-init>
                    <input type="search" id="myFilter" class="form-control" placeholder="Search" onkeyup="myFunction()">

                </div>
                <button type="button" class="btn btn-primary" data-mdb-ripple-init>
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div><!--end col-->
    </div><!--end row-->
    <div class="row mt-5 " id="myProducts">
        {{#each products}}

        <div class="col-md-4 col-sm-12">
            <div class="product-grid">
                <div class="product-image">
                    <a href="/view-Detailed-products/{{this._id}}" class="image">
                        <img class="pic-1" src="/product-images/{{this._id}}1.jpg">
                        <img class="pic-2" src="/product-images/{{this._id}}2.jpg">
                    </a>
                    <a href="#" class="product-like-icon" data-tip="Add to Wishlist">
                        <i class="far fa-heart"></i>
                    </a>
                    <ul class="product-links">
                        {{!-- <li><a href="/add-to-cart/{{this._id}}"><button>Add To Cart</button><i
                                    class="fas fa-shopping-cart"></i></a></li> --}}
                    </ul>
                </div>
                <div class="product-content">
                    <div class="row">
                        <div class="col-md-6"
                            style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">

                            <h3 class="title"><a href="#"> Name : {{this.Name}}</a></h3>
                            <div class="price">Price : Rs . {{this.Price}}</div>

                        </div>
                        <div class="col-md-6">
                            <a href="/view-Detailed-products/{{this._id}}">
                                <button class="btn btn-info">View Product
                                </button></a>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-success mt-3 pr-3">Add To
                                Cart</button>
                        </div>
                    </div>
                    <hr>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

